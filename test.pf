// Test arithmetic operations with Int and Float types

// Int + Int = Int
let a = 3 + 4
println("3 + 4 = #{a}, type: #{Sys.type(a)}")

// Int + Float = Float
let b = 3 + 4.5
println("3 + 4.5 = #{b}, type: #{Sys.type(b)}")

// Float + Float = Float or Int (if result is whole)
let c = 2.5 + 2.5
println("2.5 + 2.5 = #{c}, type: #{Sys.type(c)}")

// Int - Int = Int
let d = 10 - 3
println("10 - 3 = #{d}, type: #{Sys.type(d)}")

// Int - Float = Float
let e = 10 - 3.5
println("10 - 3.5 = #{e}, type: #{Sys.type(e)}")

// Int * Int = Int
let f = 3 * 4
println("3 * 4 = #{f}, type: #{Sys.type(f)}")

// Int * Float = Float
let g = 3 * 4.5
println("3 * 4.5 = #{g}, type: #{Sys.type(g)}")

// Float * Float = Float or Int (if result is whole)
let h = 2.5 * 2.0
println("2.5 * 2.0 = #{h}, type: #{Sys.type(h)}")

// Division tests
println("\nDivision tests:")

// Int / Int with whole result = Int
let i = 10 / 2
println("10 / 2 = #{i}, type: #{Sys.type(i)}")

// Int / Int with fractional result = Float
let j = 7 / 2
println("7 / 2 = #{j}, type: #{Sys.type(j)}")

// Float / Float with whole result = Int
let k = 7.5 / 2.5
println("7.5 / 2.5 = #{k}, type: #{Sys.type(k)}")

// Int / Float with whole result = Int
let l = 5 / 2.5
println("5 / 2.5 = #{l}, type: #{Sys.type(l)}")

// Float / Int with fractional result = Float
let m = 7.5 / 2
println("7.5 / 2 = #{m}, type: #{Sys.type(m)}")

println("\nAll tests passed!")