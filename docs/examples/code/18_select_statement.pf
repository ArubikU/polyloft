// Test: Select statement with channels
println("=== Select Statement Test ===")

let ch1 = Channel<Int>()
let ch2 = Channel<String>()

thread spawn do
    Sys.sleep(50)
    ch1.send(42)
end

thread spawn do
    Sys.sleep(100)
    ch2.send("Hello")
end

select:
    case ch1.recv() as value:
        println("Got from ch1: #{value}")
    case ch2.recv() as msg:
        println("Got from ch2: #{msg}")
end

println("âœ“ Select statement test passed")
